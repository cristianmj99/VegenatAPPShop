<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lista_vacia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Todavía no has hecho ningún pedido."
        android:textColor="#535050"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_list"
        android:name="asee.giis.unex.vegenatnavigationdrawer.ui.pedidos.OrderFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.pedidos.OrderFragment"
        tools:listitem="@layout/fragment_order">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/empty_list_image2"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginTop="15dp" />

</LinearLayout>